@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#addData').modal('show');
        $("#goAhead").hide();

        $("#termUK").hide();

        const checkbox = document.getElementById('termOfUse')

        checkbox.addEventListener('change', (event) => {
            if (event.currentTarget.checked) {
                $("#goAhead").show();
            } else {
                $("#goAhead").hide();
            }
        })


    });


    function idBtn() {
        $("#termUK").hide();
        $("#termIndo").show();
    }
    function ukBtn() {
        $("#termUK").show();
        $("#termIndo").hide();
    }
</script>
}
 <script>
     function addData() {
    $('#addData').modal('show');
}

$('#saveEnergy').click(function () {
            alert("hi");
            $.ajax({
                url: '@Url.Action("CreateData", "MstEnergy")',
                type: 'POST',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(
                    {
                        "Energy": $("#Energy").val(),
                        "NilaiKalori": $("#NilaiKalori").val(),
                        "Satuan": $("#Satuan").val(),
                    }
                ),
                success: function (data) {
                    //alert(data);
                    if (data == true) {

                        $("#Energy").val("");
                        $('#NilaiKalori').val("");
                        $('#Satuan').val("");

                        $('#msgText').text('Parameter data is added Successfully');
                        $('#successModal').modal('show'); 
                        alert("SUKSES");
                    }

                },
                error: function (jqXHR) {
                    $('#divErrorText').text(jqXHR.responseText);
                    $('#divError').show('fade');
                }
            });
        });
 </script>

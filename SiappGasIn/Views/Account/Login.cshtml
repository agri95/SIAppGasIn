@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http

@using Microsoft.AspNetCore.Identity;
@model SiappGasIn.Models.AccountViewModels.LoginViewModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SIApp Gas-In | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/adminlte/images/pertamina.png" />
    <!-- Font Awesome -->
      <!-- Bootstrap -->
    <link href="~/plugins/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/plugins/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">   
    <!-- Theme style -->
    <link rel="stylesheet" href="~/plugins/login/Login.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous" rel="stylesheet">
     <link rel="stylesheet" href="@Url.Content("~/plugins/jquery.mobile-1.4.3/jquery.mobile-1.4.3.min.css")" />
 
    <link href="@Url.Content("~/plugins/bootstrap-3.0.2/css/bootstrap.min.css")" rel="stylesheet">
   
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>

    <style>
        .img-bg-login {
            min-height: 100%;
            /* Set up proportionate scaling */
            width: 59%;
            height: 100%;
            /* Set up positioning */
            position: fixed;
            top: 0;
            left: 0;
        }
        span {
            position: absolute;
            margin-left: 2px;
            margin-top:10px;
            height: 25px;
            display: flex;
        }
       
    </style>
     <script>
   
    </script>
</head>
<body class="hold-transition login-page">
    <div class="container-fluid">
        <div class="row">
            @*Left Side*@
            <div id="divLeftSide" class="col-lg-7 col-md-7 col-sm-7" style="background-color: #0093dd;">
                <div class="row">
                    <div class="col-md-12" align="center" style="width:100%">
                        <img src="@Url.Content("~/adminlte/images/background.jpg")" class="img-bg-login" alt="Pertamina Gas Negara" />
                    </div>
                </div>
                
            </div>
            @*Right Side*@
            <div id="divRightSide" class="col-lg-5 col-md-5 col-sm-5" style="background-color:#ffffff; height: 100vh;">

                <div id="panelLogin" style="position: absolute; left: 50%; margin-right: -50%; transform: translate(-50%, -50%); height:470px; color: #393535;">
                    <div id="imgLogoITIS" class="row" style="margin-top: 200px;">
                        <div class="col-md-12" align="center">
                            <img src="@Url.Content("~/adminlte/images/logo.png")" style="width: 180px; margin-left:0px;" alt="Logo IT/IS" />
                        </div>
                    </div>
                    <div id="lblTextHeader" class="row" style="margin-top: 40px;">
                        <div class="col-md-12" align="center">
                            <label style="font-size: 26px; font-family: 'Tw Cen MT'; color: #444444; line-height: 22px; font-weight: bold; font-stretch: normal; font-style: normal; ">
                                Use this website to Calculate Cost <br />
                                SIApp Gas-In
                            </label>
                        </div>
                    </div>

                    <div class="row" style="margin-top: 20px;">

                        <div class="col-md-2"></div>
                        <div class="col-md-8" align="center">
                        
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                @Html.AntiForgeryToken()
                                
                            <label style="margin-left: -70%; margin-bottom: 0px; font-size: 18px; font-family: 'Tw Cen MT'; color: #444444; line-height: 25px; font-weight: normal; font-stretch: normal; font-style: normal;">Username</label>
                                <div class="input-group mb-3">

                                    <input asp-for="Email" type="text" class="form-control" placeholder="Username">
                        
                                </div>
                               
                            <label style="margin-left: -70%; margin-bottom: 0px; font-size: 18px; font-family: 'Tw Cen MT'; color: #444444; line-height: 25px; font-weight: normal; font-stretch: normal; font-style: normal;">Password</label>
                            <div class="input-group mb-3">

                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                    <span toggle="#Password" onclick="myFunction()" class="fa fa-fw fa-eye field-icon toggle-password" style="position:absolute; right:12px;top:auto; color:#444444; background-color: transparent; z-index:50"></span>
                                </div>
                                

                                <div class="row">
                                    <div class="col-6">
                                        <div class="icheck-primary">
                                            <input type="checkbox" asp-for="RememberMe">
                                            <label asp-for="RememberMe">
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>
                                
                                            <p hidden id="demo" name="demo" class="text-warning"></p>
                                        </div>
                                    </div>

                                    <!-- /.col -->
                                    <div class="col-6">
                                        <button type="submit" id="btnLogin" name="btnLogin" class="btn btn-primary btn-block btn-flat">Sign In</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 alert-error"><span asp-validation-for="Email" class="text-danger"></span></div>
                                    <br />
                                    <div class="col-md-12 alert-error"><span asp-validation-for="Password" class="text-danger"></span></div>
                                </div>
                                 
                                 @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-error"> 
                                        @Html.ValidationMessage("Error", new { @class = "text-danger" })
                                    </div>
                                }

                                <div id="timer" class="text-danger text-center"></div>
                            </form>
                        </div>
                            
                       
                        <div class="col-md-2"></div>
                    </div>

                    <div id="imgLogoITIS" class="row" style="margin-top: 10px;">
                        <div class="col-md-12" align="center">
                            <img src="@Url.Content("~/adminlte/images/Recovered.png")" style="width: 140px; margin-left:0px;" alt="Logo IT/IS" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
   


    <script type="text/javascript">
      function myFunction() {
            var x = document.getElementById("Password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
    <script>

        if (window.history && window.history.pushState) {
            window.history.pushState('forward', null, './Login?ReturnUrl=%2f');
        };
        window.localStorage.setItem("LastFlashImage", "");
        window.addEventListener('load', function () {
            window.history.pushState({}, 'Tap Again To Close Apps')
        });

    </script>

    <style>
        .ckLock {
            margin-top: 20px;
        }
    </style>
</body>
</html>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });

        


    </script>


}



